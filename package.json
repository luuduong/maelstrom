{
  "name": "maelstrom",
  "version": "1.0.0",
  "description": "MAELSTROM       =========",
  "main": "index.js",
  "scripts": {
    "clean": "rm -fr dist/",

    "prebuild": "npm run clean && mkdir -p dist",
    "build": "npm run build:js && npm run build:html",
    "build:js": "browserify js/index.js > dist/index.min.js",
    "build:html": "cp *.html dist/",

    "lint": "jshint js/*.js",
    "test": "jasmine",
    "env": "env"
  },
