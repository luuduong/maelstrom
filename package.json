  "bugs": {
    "url": "https://github.com/8bitreverie/maelstrom/issues"
  },
  "homepage": "https://github.com/8bitreverie/maelstrom",
  "devDependencies": {
    "browserify": "latest",
    "jasmine": "latest",
    "jshint": "latest"
  }
}
